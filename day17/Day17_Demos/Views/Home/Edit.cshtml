
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/MainMasterLayOut.cshtml";
}
    <form action="/Home/Edit" method="POST" role="form">
        <h2>@ViewBag.Message</h2>
        <legend style="margin-left: 10px;">Edit @Model.Name 's Record</legend>

        @*<div class="form-group">
        <label for="No" style="margin-left: 10px;">No</label>*@
        <input type="hidden" style="margin-left: 10px;" class="form-control" id="No" name="No" value="@Model.No">
        @*</div>*@

        <div class="form-group">
            <label for="Name" style="margin-left: 10px;">Name</label>
            <input type="text" style="margin-left: 10px;" class="form-control" id="Name" name="Name"
                   value="@Model.Name">
        </div>
        <div class="form-group">
            <label for="Address" style="margin-left: 10px;">Address</label>
            <input type="text" style="margin-left: 10px;" class="form-control" id="Address" name="Address"
                   value="@Model.Address">
        </div>

        <button type="submit" style="margin-left: 10px;" class="btn btn-primary">Update</button>
    </form>

