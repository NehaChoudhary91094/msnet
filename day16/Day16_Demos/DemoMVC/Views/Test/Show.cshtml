@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <title>Show</title>

</head>

<body>
    <br />
    <br />
    @*<h2>@ViewData["myMessage"] </h2>
        <h2>@ViewData["myMessage2"] </h2>*@

    <h2>@ViewBag.myMessage </h2>
    <h2>@ViewBag.myMessage2 </h2>
    <br />
    <br />
    <a href="/Test/Create" class="btn btn-success" style="margin-left: 10px;">Create a New Record</a>
    <br />
    <br />
    <div class="table-responsive">
        <table class="table">
            @* Model here is List<Emp> *@

            <tr>
                <th>No</th>
                <th>Name</th>
                <th>Address</th>
            </tr>
            @foreach (var emp in Model)
            {
                <tr>
                    <td> @emp.No </td>
                    <td> @emp.Name </td>
                    <td> @emp.Address </td>
                    <td>
                        <a class="btn btn-warning" href="/Test/Edit/@emp.No">Edit</a>
                    </td>

                    <td>
                        <a class="btn btn-danger" href="/Test/Delete/@emp.No">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</body>

</html>
